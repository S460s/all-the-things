^
(?= (
  0 |
  1 (?![0-9]*0) |
  2 (?![0-9]*[01]) |
  3 (?![0-9]*[012]) |
  4 (?![0-9]*[0123]) |
  5 (?![0-9]*[01234]) |
  6 (?![0-9]*[012345]) |
  7 (?![0-9]*[0123456]) |
  8 (?![0-9]*[01234567]) |
  9 (?![0-9]*[012345678])
){6} )
(?=
  [0-9]*
  (?<b> [0-9] )
  (?<adj> (?!(?P=b)) [0-9])
  (?P=adj)
  (?!(?P=adj))
)
[0-9]{6}
$
/mx
